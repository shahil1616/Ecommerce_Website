<% layout('layouts/boilerplate') -%>

<section class="container">
   
 
<div class="row products">

    <%for( let product of products){%>
    <div class="col-lg-3 col-md-6 mb-3 d-flex align-items-stretch  ">
        <div class="card shadow-sm mx-auto d-flex flex-column text-center" style="width: 20rem;">
            <img src="<%=product.img%>" class="card-img-top" alt="item image" style="height: 210px; object-fit: cover; padding: 10px;">
            <span class="badge rounded-pill bg-light text-dark w-25 position-absolute translate-middle-y" style="top:40%;left:4%"><%=product.avgRating%>  &star; | <%=product.reviews.length%></span>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title d-flex justify-content-between align-items-center"><span> <%=product.name%></span> <a href="#" class="btn"> <span> <i class="far fa-heart">  </i></span> </a></h5>
              <p class="card-text fw-dark flex-grow-1 " style="text-align: left;"><%=product.desc.substring(0,100)%></p>
              <% if(product.reviews.length){ %>
                <p class="text-muted"><%=product.reviews.length%> reviews</p>
              <%}else{%>
                <p class="text-muted">No reviews</p>
              <% } %>
              <h6 class="card-title"> <span class="fw-lighter fs-6 text-decoration-line-through">Rs.<%= product.price %></span> Rs.<%= product.price %> <span class="fw-light fs-6 text-warning">( 50 % OFF )</span> </h6>
              <a href="/products/<%=product._id%>" class="btn btn-info btn-sm show-btn mt-auto align-self-center" style="padding: 5px 10px; font-size: 0.8rem; width: 100px; text-align: center; color: aliceblue;">Buy Now</a>
            </div>
        </div>

    </div>
    <%}%>

</div>

</section>
<div style="margin-bottom: 50px;"></div>