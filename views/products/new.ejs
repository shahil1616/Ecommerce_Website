<% layout('layouts/boilerplate') -%>



<div class="row">
    <div class="col-md-6 mx-auto">

        <form action="/products" method="POST" class="validated-form" novalidate>

            <div class="mb-3">
                <label for="name" class="form-label">Name : </label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Product Name" required>
                <div class="valid-feedback">
                    
                  </div>
                  <div class="invalid-feedback">
                    Please give the name of the product.
                  </div>
        
            </div>
        
            <div class="mb-3">
                <label for="img" class="form-label">Image Url</label>
                <input type="text" class="form-control" name="img" id="img" placeholder="Product Image URL" required>
                <div class="valid-feedback">
                    
                </div>
                <div class="invalid-feedback">
                Image URL is not filled!
                </div>
            </div>
            <div>
                <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Rs. </span>
                    <input type="text" class="form-control" name="price" placeholder="Price" aria-label="Username" aria-describedby="basic-addon1" required>
                    <div class="valid-feedback">
                    
                    </div>
                    <div class="invalid-feedback">
                      Please give the price of the product.
                    </div>
                </div>
              
            </div>
            <div class="mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" name="desc" id="desc"  rows="5" required></textarea>

                <div class="valid-feedback">
                    
                </div>
                <div class="invalid-feedback">
                  Description is not provided.
                </div>
        
        
            </div>
        
            <button type="submit" class="btn btn-sm btn-success">ADD</button>
        </form>
         
    </div>
</div>


<div style="margin-bottom: 50px;"></div>